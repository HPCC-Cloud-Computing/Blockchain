        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Update Student Information
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <a href="#">
                            <i class="fa fa-dashboard"></i> Home</a>
                    </li>
                    <li>
                        <a href="#">School</a>
                    </li>
                    <li class="active">Update student info</li>
                </ol>
            </section>
            <section class="content">
                <br/>
                <div class="box">
                    <div class="col-md-6 col-md-offset-3">
                        <form action="http://localhost:4200/updateuser">
                            <div class="input-group">
                                <input type="text" class="form-control" name="userid" placeholder="Search">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                        <!-- <div class="search-box">
                                <form class="search-form" action="http://localhost:4200/updateuser">
                                    <input class="form-control" placeholder="Nhap UserID" type="text" name="userid">
                                    <button class="btn btn-link search-btn">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </form>
                            </div> -->

                    </div>
                    <div class="clearfix"></div>
                    <br/>
                    <div style="height: 20px;"></div>
                    <div class="container-fluid">
                        <% var user=["User ID", "User Name", "Date Of Birth", "Gender", "Address"] %>
                            <% var user_inf=["user_id", "name_user", "date_of_brith", "sex_user", "address_user"] %>

                                <% if (locals.student) { %>
                                    <form class="" method="POST" action="/notifyuser">
                                        <% for(var i=0; i< user.length; i++) { %>
                                            <div class="form-group">
                                                <label for=<%=user_inf[i]%> >
                                                    <%=user[i]%>
                                                </label>
                                                <input type="text" class="form-control" id=<%=user_inf[i]%> name=
                                                <%=user_inf[i]%> value="<%=student[user_inf[i]]%>" >
                                            </div>
                                            <% } %>

                                                <button type="submit" class="btn btn-default">Update</button>

                                    </form>
                                    <% } %>
                                    <div style="height: 20px;"></div>

                    </div>
                </div>
            </section>
        </div>
